<p id="notice"></p>

<% if @book.errors.any? %>
    <div class="error-message">
        <h2><%= @book.errors.count %> error prohibited this obj from being saved: </h2><br>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </div>
<% end %>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <div class='col-md-3 col-md-offset-3'></div>
        <%= form_for(@book, url: book_path, html: { class: "edit_user", id: "edit_user" }, method: :patch) do |f| %>
            <div class="field row">
                <%= f.label :title %><br>
                <%= f.text_field :title, class: "col-xs-12 book_title" %>
            </div>
            <div class="field row">
                <%= f.label :Opinion %><br>
                <%= f.text_area :body, class: "col-xs-12 book_body", id: "book_body" %>
            </div>
            <div class="actions row">
                <%= f.submit "Update Book" , class: "btn btn-primary col-xs-12" %>   
            </div>
        <% end %>
        
        <%= link_to 'Show', book_path(@book.id) %> |
        <%= link_to 'Back', books_path, class: "back" %>
    </div>
    <div class="col-md-3"></div>
</div>